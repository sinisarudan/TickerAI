{
	"version": "1.0.0",
	"schemaVersion": "1.0.0",
	"name": "f-tickerai",
	"description": "TickerAI - frontend",
	"variables": {
		"COLABO_FOLDER": "{{{ENV:COLABO_FOLDER}}}"
	},
	"params": {
		"dependencies": {
			"provideDependencies": "link-path"
		},
		"environment": {
			"os": "linux"
		},
		"sudo": {
			"offer": false,
			"install": false,
			"build": false,
			"symlinks": false
		}
	},
	"puzzles": {
        "dependencies": {
			"@tickerai-news/i-core": {},

			// we place it here even though we have it in
			// `tickerai-code/src/frontend/apps/tickerai/colabo.config.json`
			// to make Intellisense working in puzzes
			"@colabo-headless/f-components-vue": {},
			"@colabo-knalledge/i-core": {},
			"@colabo-dev/f-debug": {},
			"@colabo-utils/i-config": {},
			"@colabo-knalledge/i-core-services": {
				"expandSubPaths": true,
			},
			"@colabo-knalledge/i-schema": {},
			"@colabo-knalledge/i-form": {},
			"@colabo-flow/i-core": {},
			"@colabo-rima/f-aaa": {
				"expandSubPaths": true
			},
			"@colabo-knalledge/i-form-tripetto": {},
			"@colabo-datatalks/f-form": {},
			"@colabo-headless/f-core-frontend-vanilla": {
				"aliasAs": "@colabo-headless/i-core",
				"expandSubPaths": true
			},
			"@colabo-utils/i-notifications": {},
			"@tickerai-news/i-core": {},
			"@colabo-dialogue/f-core": {},
			"@colabo-knalledge/f-core": {},
			"@colabo-rima/f-core": {},
			"@tickerai-news/i-core": {},
			"@tickerai-news/f-store": {},
        },
        "offers": {
            "@tickerai-news/f-store": {
                "npm": "@tickerai-news/f-store",
                "path": "puzzles/news/store"
            }
        }
    }
}
