{
	"extends": "../../../tsconfig.colabo.json",
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "rootDir": "./",
        "allowJs": true,
        "outDir": "dist",
        "preserveConstEnums": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "listFiles": false,
        "lib": [
            "es6",
            "dom"
        ]
    },
    "allowSyntheticDefaultImports": false,
    "exclude": [
        "**/*d.ts",
    ],
    "compileOnSave": false
}
